{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

    {{ form_start(registrationForm) }}
    <div class="flex flex-col max-w-xl w-full mx-auto">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white text-center">
            Inscription
        </h1>
        <p class="text-base text-gray-700 dark:text-gray-400 md:text-lg text-center mt-3 mb-4">
            Pour accéder à votre compte, veuillez vous inscrire.
        </p>
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}




        {% include 'layouts/_flash_message.html.twig' %}

        <div class=" mb-2">
            {{ form_label(registrationForm.fullname, 'Nom complet', {
                label_attr: {
                    class: 'label'
                }
            }) }}
            {{ form_widget(registrationForm.fullname, {
                attr: {
                    class: 'form-input-md'
                }
            }) }}
            <div class="form-error">
                {{ form_errors(registrationForm.fullname) }}
            </div>
        </div>

        <div class=" mb-2">
            {{ form_label(registrationForm.email, 'Email', {
                label_attr: {
                    class: 'label'
                }
            }) }}
            {{ form_widget(registrationForm.email, {
                attr: {
                    class: 'form-input-md'
                }
            }) }}
            <div class="form-error">
                {{ form_errors(registrationForm.email) }}
            </div>
        </div>

        <div class=" mb-2">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {
                label_attr: {
                    class: 'label'
                }
            }) }}
            {{ form_widget(registrationForm.plainPassword, {
                attr: {
                    class: 'form-input-md'
                }
            }) }}
            <div class="form-error">
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
        </div>

        <div class=" my-4">
            <div class="flex gap-4 justify-start items-center">
                {{ form_widget(registrationForm.agreeTerms, {
                    attr: {
                        class: 'w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800'
                    }
                }) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {
                    label_attr: {
                        class: 'label'
                    }
                }) }}
            </div>
            <div class="form-error">
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
        </div>

        <button type="submit" class="btn-md btn-primary">S'inscrire</button>

        <p class="text-base text-gray-700 dark:text-gray-400 md:text-lg text-center mt-3 mb-4">
            Déjà inscrit ? <a href="{{ path('app_login') }}" class="text-primary-500 hover:text-primary-600">Connectez-vous
                !</a>
        </p>

    </div>
    {{ form_end(registrationForm) }}


{% endblock %}
