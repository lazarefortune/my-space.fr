{% extends 'base.html.twig' %}

{% block body %}
    <!-- Hero -->

    <div class="flex flex-col items-start gap-2 max-w-[980px]">
        <h1 class="text-3xl font-extrabold leading-tight tracking-tighter sm:text-3xl md:text-5xl lg:text-6xl">
            {{ 'hero.title.part1'|trans }} <br> <span>{{ 'hero.title.part2'|trans }}</span>
        </h1>
        <p class="text-lg text-slate-700 max-w-[700px] dark:text-slate-400 sm:text-xl">
            {{ 'hero.description'|trans }}
        </p>
    </div>

    <div class="flex flex-col space-y-4 sm:space-x-4 sm:space-y-0 sm:flex-row md:flex-row">
        <a href="{{ path('app_story_new') }}"
           class="btn-primary">
            <span class="ml-2">
                {{ 'hero.btn-label'|trans }}
            </span>
        </a>
        <a href="{{ path('app_story_index') }}"
           class="btn-secondary">
            {{ icon('book-open', '2sm', 'h-4 w-4') }}
            <span class="ml-2">
                {{ 'hero.btn-outline-label'|trans }}
            </span>

        </a>
    </div>
    <!-- End Hero -->

    <div class="my-2 w-full bg-slate-200 h-[1px] dark:bg-slate-700"></div>

    <!-- Section stories -->

    <div class="my-8 flex flex-col items-center gap-8">
        <h2 class="text-xl font-bold leading-tight tracking-tighter sm:text-2xl md:text-2xl lg:text-2xl">
            Les dernières histoires
        </h2>

        {% include 'components/stories.html.twig' with { stories: stories } %}

        <!-- show more -->
        <div class="mt-8 flex justify-center">
            <a href="{{ path('app_story_index') }}"
               class="btn-primary">
                <span class="mr-2">
                    Voir plus d'histoires
                </span>
                {{ icon('arrow-right', '2sm', 'h-4 w-4') }}
            </a>
        </div>

    </div>

    <!-- End Section stories -->

    <div class="my-2 w-full bg-slate-200 h-[1px] dark:bg-slate-700"></div>

    <div>
        <div class="flex items-center text-base space-x-2">
            <h4 class="text-lg font-semibold text-slate-900 dark:text-slate-100">Meilleurs auteurs</h4>
            <span class="rounded-full bg-slate-100 px-2 py-1 text-xs font-semibold text-slate-700">2</span>
        </div>
        <div class="mt-3 flex -space-x-2">
            <a href="https://github.com/lazarefortune" target="_blank" rel="noopener noreferrer">
                <img class="inline-block h-14 w-14 rounded-full ring-2 ring-white hover:ring-sky-500"
                     src="https://avatars.githubusercontent.com/u/30579785?v=4" alt="lazare fortune">
            </a>
            <a href="https://github.com/lazarefortunecode" target="_blank" rel="noopener noreferrer">
                <img class="inline-block h-14 w-14 rounded-full ring-2 ring-white hover:ring-sky-500"
                     src="https://avatars.githubusercontent.com/u/80406390?v=4" alt="lazare fortune code">
            </a>
        </div>
        <p class="mt-4 text-sm text-slate-700 dark:text-slate-400">
            Merci à tous ceux qui ont contribué à ce projet.
        </p>
    </div>




{% endblock %}
