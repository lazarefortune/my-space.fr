{% extends 'base.html.twig' %}

{% block title %}Story{% endblock %}

{% block body %}
    <h1>Story</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ story.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ story.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ story.description }}</td>
            </tr>
            <tr>
                <th>Privacy</th>
                <td>{{ story.privacy }}</td>
            </tr>
            <tr>
                <th>IsDraft</th>
                <td>{{ story.isDraft ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsTrash</th>
                <td>{{ story.isTrash ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PublishedAt</th>
                <td>{{ story.publishedAt ? story.publishedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ story.updatedAt ? story.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ story.createdAt ? story.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_story_index') }}">back to list</a>

    <a href="{{ path('app_story_edit', {'id': story.id}) }}">edit</a>

    {{ include('story/_delete_form.html.twig') }}
{% endblock %}
