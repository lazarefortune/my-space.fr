<div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
    {% for story in stories|slice(0, 4) %}
        <div class="col-span-1 flex flex-col items-center gap-4">
            <div class="h-48 w-full rounded-md bg-slate-200 dark:bg-slate-700"></div>
            <h3 class="text-lg font-bold leading-tight tracking-tighter sm:text-xl md:text-xl lg:text-xl">
                {{ story.title }}
            </h3>
            <div class="flex-1 text-base text-slate-700 dark:text-slate-400">
                {{ story.description | slice(0, 200) | raw }} ...
            </div>
            <a href="{{ path('app_story_show', {'id': story.id}) }}"
               class="btn-secondary-alt">
                        <span class="mr-2">
                           Lire la suite
                        </span>
            </a>
        </div>
    {% endfor %}

</div>

{% if stories is empty %}
    <div class="flex flex-col items-center gap-4 min-h-[300px]">
        <!-- no stories -->
        <p class="text-lg font-bold leading-tight tracking-tighter sm:text-xl md:text-xl lg:text-xl">
            Aucune histoire n'a été publiée pour le moment.
        </p>
        <p class="text-base text-slate-500 dark:text-slate-400">
            Soyez le premier à partager votre histoire.
        </p>
        <!-- cta add story -->
        <a href="{{ path('app_story_new') }}" class="btn-primary">
            {{ icon('plus', '2sm', 'h-4 w-4') }}
            <span class="ml-2">
               Ajouter une histoire
            </span>
        </a>
    </div>
{% endif %}
